{
  "format_version": "1.16.100",
  "minecraft:entity": {
    "description": {
      "identifier": "mutate:boss_iron_golem",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false
    },

    "component_groups": {
      "comp:revert_to_boss": {
        "minecraft:transformation": {
          "into": "mutate:mutated_boss",
          "delay": 0
        }
      },
      "comp:fight": {
        "minecraft:behavior.melee_attack": {
          "priority": 1,
          "track_target": true,
          "speed_multiplier": 1.2,
          "reach_multiplier": 1.5,
          "cooldown_time": 1.0
        },
        "minecraft:attack": {
          "damage": {
            "range_min": 3,
            "range_max": 5
          }
        }
      },
      "comp:idle": {
        "minecraft:behavior.random_stroll": {
          "priority": 6,
          "speed_multiplier": 0.8,
          "xz_dist": 8,
          "interval": 90
        }
      }
    },

    "components": {
      "minecraft:type_family": {
        "family": [ "irongolem", "monster", "mutated_boss" ]
      },
      "minecraft:nameable": {
        "always_show": true,
        "allow_name_tag_renaming": true
      },
      "minecraft:collision_box": {
        "width": 1.4,
        "height": 2.9
      },
      "minecraft:health": {
        "value": 200,
        "max": 200
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:movement": {
        "value": 0.25
      },
      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_water": false,
        "can_walk": true
      },
      "minecraft:movement.basic": {
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:knockback_resistance": {
        "value": 1.0
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "cause": "fall",
            "deals_damage": false
          },
          {
            "on_damage": {
              "filters": {
                "test": "has_damage",
                "value": "fatal"
              },
              "event": "event:transform_back",
              "target": "self"
            }
          }
        ]
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:follow_range": {
        "value": 32
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "must_see": true,
        "within_radius": 16,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "player"
            },
            "max_dist": 16
          }
        ]
      },
      "minecraft:behavior.look_at_player": {
        "priority": 7,
        "look_distance": 6.0,
        "probability": 0.02
      },
      "minecraft:behavior.random_look_around": {
        "priority": 8
      },
      "minecraft:on_target_acquired": {
        "event": "event:on_target_acquired",
        "target": "self"
      },
      "minecraft:on_target_escape": {
        "event": "event:on_target_escape",
        "target": "self"
      },
      "minecraft:conditional_bandwidth_optimization": {
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "comp:idle"
          ]
        }
      },
      "event:on_target_acquired": {
        "remove": {
          "component_groups": [
            "comp:idle"
          ]
        },
        "add": {
          "component_groups": [
            "comp:fight"
          ]
        }
      },
      "event:on_target_escape": {
        "remove": {
          "component_groups": [
            "comp:fight"
          ]
        },
        "add": {
          "component_groups": [
            "comp:idle"
          ]
        }
      },
      "mutate:revert": {
        "add": {
          "component_groups": ["comp:revert_to_boss"]
        }
      }
    }
  }
}