{
  "format_version": "1.16.100",
  "minecraft:entity": {
    "description": {
      "identifier": "mutate:mutated_boss",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "comp:idle": {
        "minecraft:behavior.random_stroll": {
          "priority": 6,
          "speed_multiplier": 0.8,
          "xz_dist": 8,
          "interval": 90
        }
      },
      "comp:fight": {
        "minecraft:behavior.ranged_attack": {
          "priority": 1,
          "speed_multiplier": 1.2,
          "attack_interval_min": 1,
          "attack_interval_max": 1,
          "attack_radius": 1
        }
      },
      "comp:spawning": {
        "minecraft:timer": {
          "time": [1.625, 1.625],
          "looping": false,
          "time_down_event": {
            "event": "event:spawn_animation_complete",
            "target": "self"
          }
        }
      },
      "comp:death": {
        "minecraft:is_sheared": {},
        "minecraft:timer": {
          "time": [3.0417, 3.0417],
          "looping": false,
          "time_down_event": {
            "event": "event:despawn",
            "target": "self"
          }
        },
        "minecraft:physics": {
          "has_gravity": false,
          "has_collision": true
        },
        "minecraft:pushable": {
          "is_pushable": true
        },
        "minecraft:collision_box": {
          "width": 0.9,
          "height": 1.8
        },
        "minecraft:movement": {
          "value": 0
          }
        }
    },
    "components": {
      "minecraft:type_family": {
        "family": ["monster", "mutated_boss"]
      },
      "minecraft:nameable": {
        "always_show": true
      },
      "minecraft:health": {
        "value": 200,
        "max": 200
      },
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 15 : 0"
      },
      "minecraft:physics": {
        "has_gravity": true,
        "has_collision": true
      },
      "minecraft:pushable": {
        "is_pushable": false
      },
      "minecraft:push_through": {
        "value": 1
      },
      "minecraft:damage_sensor": {
        "triggers": {
          "deals_damage": false,  
          "on_damage": {
            "filters": {
              "test": "has_damage",
              "value": "fatal"
            },
            "event": "event:death",
            "target": "self"
          }
        }
      },
      "minecraft:movement.basic": {},
      "minecraft:jump.static": {},
      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_water": false,
        "can_walk": true
      },
      "minecraft:attack": {
        "damage": {
          "range_min": 0,
          "range_max": 0
        }
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "within_radius": 16,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "player"
            },
            "max_dist": 16
          }
        ]
      },
      "minecraft:on_target_acquired": {
        "event": "event:on_target_acquired",
        "target": "self"
      },
      "minecraft:on_target_escape": {
        "event": "event:on_target_escape",
        "target": "self"
      },
      "minecraft:conditional_bandwidth_optimization": {}
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "comp:idle",
            "comp:spawning"
          ]
        }
      },
      "event:spawn_animation_complete": {
        "remove": {
          "component_groups": [
            "comp:spawning"
          ]
        }
      },
      "event:disable_combat": {
        "remove": {
        "component_groups": 
        ["comp:fight",
          "comp:idle" ]
        }
      },
      "event:enable_combat": {
        "add": {
        "component_groups":
        ["comp:fight",
          "comp:idle" ]
        }
      },
      "event:on_target_acquired": {
        "remove": {
          "component_groups": [
            "comp:idle"
          ]
        },
        "add": {
          "component_groups": [
            "comp:fight"
          ]
        }
      },
      "event:on_target_escape": {
        "remove": {
          "component_groups": [
            "comp:fight"
          ]
        },
        "add": {
          "component_groups": [
            "comp:idle"
          ]
        }
      },
      "event:death": {
        "add": {
          "component_groups": [
            "comp:death"
          ]
        },
        "remove": {
          "component_groups": [
            "comp:idle",
            "comp:fight"
          ]
        }
      },
      "basic_attack_start": {},
      "basic_attack_end": {}
    }
  }
}