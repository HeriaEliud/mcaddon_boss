{
  "format_version": "1.16.100",
  "minecraft:entity": {
    "description": {
      "identifier": "mutate:mutated_boss",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "comp:idle": {
        "minecraft:behavior.random_stroll": {
          "priority": 6,
          "speed_multiplier": 0.8,
          "xz_dist": 8,
          "interval": 90
        }
      },
      "comp:fight": {
        "minecraft:behavior.melee_attack": {
          "priority": 1,
          "speed_multiplier": 1.2,
          "track_target": true,
          "reach_multiplier": 0.8
        }
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": ["monster", "mutated_boss"]
      },
      "minecraft:nameable": {
        "always_show": true
      },
      "minecraft:health": {
        "value": 40,
        "max": 40
      },
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 15 : 0"
      },
      "minecraft:physics": {
        "has_gravity": true,
        "has_collision": true
      },
      "minecraft:pushable": {
        "is_pushable": false
      },
      "minecraft:push_through": {
        "value": 1
      },
      "minecraft:movement.basic": {},
      "minecraft:jump.static": {},
      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_water": false,
        "can_walk": true
      },
      "minecraft:attack": {
        "damage": 0
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "within_radius": 16,
        "entity_types": [
          {
            "filters": {
              "test": "is_family",
              "subject": "other",
              "value": "player"
            },
            "max_dist": 16
          }
        ]
      },
      "minecraft:on_target_acquired": {
        "event": "event:on_target_acquired",
        "target": "self"
      },
      "minecraft:on_target_escape": {
        "event": "event:on_target_escape",
        "target": "self"
      },
      "minecraft:conditional_bandwidth_optimization": {}
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "comp:idle"
          ]
        }
      },
      "event:on_target_acquired": {
        "remove": {
          "component_groups": [
            "comp:idle"
          ]
        },
        "add": {
          "component_groups": [
            "comp:fight"
          ]
        }
      },
      "event:on_target_escape": {
        "remove": {
          "component_groups": [
            "comp:fight"
          ]
        },
        "add": {
          "component_groups": [
            "comp:idle"
          ]
        }
      },
      "basic_attack_start": {},
      "basic_attack_end": {}
    }
  }
}