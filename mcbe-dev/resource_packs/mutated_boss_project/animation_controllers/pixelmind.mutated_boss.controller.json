{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.pixelmind.mutated_boss": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [{ "walk": "query.is_moving" }, { "attack": "variable.attack" }],
          "animations": ["animation.pixelmind.mutated_boss.idle"]
        },
        "walk": {
          "transitions": [{ "attack": "variable.attack" }, { "default": "!query.is_moving" }],
          "animations": ["animation.pixelmind.mutated_boss.walk"]
        },
        "attack": {
          "transitions": [{ "default": "!variable.attack" }],
          "animations": ["animation.pixelmind.mutated_boss.attack"]
        }
      }
    }
  }
}
