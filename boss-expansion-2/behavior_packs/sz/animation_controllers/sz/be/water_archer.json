{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.boss_expansion.water_archer.attack": {
      "initial_state": "can_attack",
      "states": {
        "can_attack": {
          "on_entry": ["@s event:can_attack"],
          "transitions": [
            {"on_attack": "query.facing_target_to_range_attack"}
          ]
        },
        "on_attack": {
          "on_entry": [
            "v.end_time = q.life_time + 1.0;"
          ],
          "transitions": [
            {"cooldown": "q.life_time >= v.end_time"}
          ]
        },
        "cooldown": {
          "on_entry": [
            "@s event:ban_attack",
            "v.end_time = q.life_time + 2.0;"
          ],
          "transitions": [
            {"can_attack": "q.life_time >= v.end_time"}
          ]
        }
      }
    }
  }
}