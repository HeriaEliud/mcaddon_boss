              "value": 6
            },
            "add": {
              "component_groups": [
                "page_7"
              ]
            }
          },
          {
            "filters": {
              "test": "is_skin_id",
              "subject": "self",
              "value": 7
            },
            "add": {
              "component_groups": [
                "page_8"
              ]
            }
          },
          {
            "filters": {
              "test": "is_skin_id",
              "subject": "self",
              "value": 8
            },
            "add": {
              "component_groups": [
                "page_9"
              ]
            }
          },
          {
            "filters": {
              "test": "is_skin_id",
              "subject": "self",
              "value": 9
            },
            "add": {
              "component_groups": [
                "page_1"
              ]
            }
          },
          {
            "remove": {
              "component_groups": [
                "next"
              ]
            }
          }
        ]
      },
      "despawn": {
        "add": {
          "component_groups": [
            "despawn"
          ]
        }
      }
    }
  }
}