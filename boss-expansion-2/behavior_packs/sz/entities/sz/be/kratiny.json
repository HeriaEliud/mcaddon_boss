{
  "format_version": "1.20.60",
  "minecraft:entity": {
    "components": {
      "minecraft:follow_range": {"value": 64},
      "minecraft:behavior.hurt_by_target": {"priority": 1}
    },
    "description": {
      "identifier": "sz_workshop:kratiny",
      "is_experimental": false,
      "is_spawnable": true,
      "is_summonable": true
    },
    "component_groups": {
      "comp:base": {
        "minecraft:jump.static": {},
        "minecraft:movement.generic": {},
        "minecraft:physics": {},
        "minecraft:nameable": {
          "allow_name_tag_renaming": true,
          "always_show": true
        },
        "minecraft:navigation.generic": {
          "is_amphibious": true,
          "can_path_over_water": false,
          "can_break_doors": true,
          "can_swim": true,
          "can_walk": true,
          "avoid_sun": true
        },
        "minecraft:pushable": {
          "is_pushable": true,
          "is_pushable_by_piston": true
        }
      },
      "comp:behaviour": {
        "minecraft:behavior.nearest_attackable_target": {
          "entity_types": [
            {
              "filters": {
                "subject": "other",
                "test": "is_family",
                "value": "player"
              }
            }
          ],
          "priority": 2,
          "reselect_targets": true,
          "must_see": true,
          "within_radius": 12.0,
          "must_see_forget_duration": 17.0,
          "persist_time": 0.5
        },
        "minecraft:behavior.look_at_player": {
          "priority": 9,
          "probability": 0.02,
          "target_distance": 6.0
        },
        "minecraft:behavior.random_stroll": {
          "priority": 10,
          "speed_multiplier": 1.0
        },
        "minecraft:behavior.random_look_around": {
          "priority": 11
        }
      },
      "comp:config": {
        "minecraft:experience_reward": {
          "on_death": "query.last_hit_by_player ? 5 + (query.equipment_count * Math.Random(1,3)) : 0"
        },
        "minecraft:health": {
          "max": 30,
          "value": 30
        },
        "minecraft:attack": {
          "damage": 6
        },
        "minecraft:collision_box": {
          "width": 2,
          "height": 2.5
        },
        "minecraft:loot": {
          "table": "loot_tables/empty.json"
        },
        "minecraft:movement": {
          "value": 0.25
        },
        "minecraft:underwater_movement": {
          "value": 0.1
        },
        "minecraft:breathable": {
          "total_supply": 15,
          "suffocate_time": 0,
          "breathes_air": true,
          "breathes_water": true
        },
        "minecraft:type_family": {
          "family": ["mob", "monster"]
        }
      },
      "comp:use_delayed_attack": {
        "minecraft:behavior.delayed_attack": {
          "attack_duration": 0.96,
          "hit_delay_pct": 0.5,
          "priority": 5,
          "reach_multiplier": 2.0,
          "track_target": true
        }
      },
      "comp:use_melee_attack": {
        "minecraft:behavior.melee_attack": {
          "priority": 5,
          "speed_multiplier": 1.0,
          "track_target": true
        }
      },
      "comp:use_ranged_attack": {
        "minecraft:behavior.ranged_attack": {
          "priority": 5,
          "attack_interval_max": 3.0,
          "attack_interval_min": 1.0,
          "attack_radius": 15.0
        },
        "minecraft:shooter": {
          "def": "minecraft:arrow"
        }
      },
      "comp:spawn": {
        "minecraft:timer": {
          "looping": false,
          "time": 1.0,
          "time_down_event": {
            "event": "event:on_finished_spawn"
          }
        },
        "minecraft:damage_sensor": {
          "triggers": {
            "cause": "all",
            "deals_damage": false
          }
        }
      },
      "comp:immune_death": {
        /* "minecraft:damage_sensor": {
          "triggers": {
            "deals_damage": false,
            "on_damage": {
              "filters": {
                "test": "has_damage",
                "value": "fatal"
              },
              "event": "event:on_death",
              "target": "self"
            }
          }
        } */
      },
      "comp:death": {
        "minecraft:timer": {
          "looping": false,
          "time": 1.75,
          "time_down_event": {
            "event": "event:despawn"
          }
        }
      },
      "comp:despawn": {
        "minecraft:instant_despawn": {}
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "comp:base", "comp:config",
            "comp:spawn"
          ]
        }
      },
      "event:on_finished_spawn": {
        "add": {
          "component_groups": ["comp:immune_death", "comp:behaviour", "comp:use_delayed_attack"]
        },
        "remove": {
          "component_groups": ["comp:spawn"]
        }
      },
      "event:on_death": {
        "add": {
          "component_groups": ["comp:death"]
        }
      },
      "event:despawn": {
        "add": {
          "component_groups": ["comp:despawn"]
        }
      }
    }
  }
}