{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.boss_expansion.the_pharoah_box.root": {
      "initial_state": "closed",
      "states": {
        "on_open": {
          "animations": ["opening"],
          "transitions": [
            {"opened": "query.any_animation_finished"}
          ]
        },
        "opened": {
          "animations": ["state.opened"],
          "transitions": [
            {"on_close": "!query.is_sheared"}
          ]
        },
        "on_close": {
          "animations": ["closing"],
          "transitions": [
            {"closed": "query.any_animation_finished"}
          ]
        },
        "closed": {
          "animations": ["state.closed"],
          "transitions": [
            {"on_open": "query.is_sheared"}
          ]
        }
      }
    }
  }
}