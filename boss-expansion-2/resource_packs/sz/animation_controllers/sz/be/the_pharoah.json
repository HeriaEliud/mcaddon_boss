{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.boss_expansion.the_pharoah.root": {
      "initial_state": "idle",
      "states": {
        "idle": {
          "animations": ["idle"],
          "transitions": [
            {"attack1": "query.is_casting && query.variant == 10"},
            {"attack2": "query.is_casting && query.variant == 20"},
            {"skill1": "query.is_casting && query.variant == 100"},
            {"skill2": "query.is_casting && query.variant == 200"},
            {"skill3": "query.is_casting && query.variant == 300"},
            {"skill4": "query.is_casting && query.variant == 400"},
            {"walk": "query.modified_move_speed >= 0.1"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "walk": {
          "animations": ["walk"],
          "transitions": [
            {"attack1": "query.is_casting && query.variant == 10"},
            {"attack2": "query.is_casting && query.variant == 20"},
            {"skill1": "query.is_casting && query.variant == 100"},
            {"skill2": "query.is_casting && query.variant == 200"},
            {"skill3": "query.is_casting && query.variant == 300"},
            {"skill4": "query.is_casting && query.variant == 400"},
            {"idle": "query.modified_move_speed < 0.1"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "attack1": {
          "animations": ["basic_attack1"],
          "transitions": [
            {"idle": "query.variant == 0 && query.modified_move_speed < 0.1"},
            {"walk": "query.variant == 0 && query.modified_move_speed >= 0.1"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "attack2": {
          "animations": ["basic_attack2"],
          "transitions": [
            {"idle": "query.variant == 0 && query.modified_move_speed < 0.1"},
            {"walk": "query.variant == 0 && query.modified_move_speed >= 0.1"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "skill1": {
          "animations": ["shield"],
          "transitions": [
            {"idle": "query.variant == 0 && query.modified_move_speed < 0.1"},
            {"walk": "query.variant == 0 && query.modified_move_speed >= 0.1"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "skill2": {
          "animations": ["sand_dust_strike"],
          "transitions": [
            {"idle": "query.variant == 0 && query.modified_move_speed < 0.1"},
            {"walk": "query.variant == 0 && query.modified_move_speed >= 0.1"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "skill3": {
          "animations": ["sandstorm"],
          "transitions": [
            {"idle": "query.variant == 0 && query.modified_move_speed < 0.1"},
            {"walk": "query.variant == 0 && query.modified_move_speed >= 0.1"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "skill4": {
          "animations": ["curse_cloud"],
          "transitions": [
            {"idle": "query.variant == 0 && query.modified_move_speed < 0.1"},
            {"walk": "query.variant == 0 && query.modified_move_speed >= 0.1"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        }
      }
    }
  }
}