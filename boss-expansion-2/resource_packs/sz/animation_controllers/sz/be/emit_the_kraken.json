{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.boss_expansion.emit_the_kraken.root": {
      "initial_state": "init",
      "states": {
        "init": {
          "transitions": [
            {"asleep": "query.is_stunned"},
            {"idle": "!query.is_stunned"}
          ]
        },
        "asleep": {
          "animations": ["asleep"],
          "transitions": [
            {"awake": "!query.is_stunned"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "awake": {
          "animations": ["awake"],
          "transitions": [
            {"idle": "query.any_animation_finished"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "idle": {
          "animations": ["empty"],
          "transitions": [
            {"death": "query.is_sheared"},
            {"attack1": "query.is_casting && query.variant == 10"},
            {"attack2": "query.is_casting && query.variant == 20"},
            {"skill1": "query.is_casting && query.variant == 100"},
            {"skill2": "query.is_casting && query.variant == 200"},
            {"skill3": "query.is_casting && query.variant == 300"},
            {"skill4": "query.is_casting && query.variant == 400"},
            {"skill5": "query.is_casting && query.variant == 500"},
            {"skill6": "query.is_casting && query.variant == 600"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "death": {
          "animations": ["death"],
          "transitions": [
            {"idle": "(0.0)"}
          ]
        },
        "attack1": {
          "animations": ["attack_1"],
          "transitions": [
            {"death": "query.is_sheared"},
            {"idle": "query.variant == 0"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "attack2": {
          "animations": ["attack_2"],
          "transitions": [
            {"death": "query.is_sheared"},
            {"idle": "query.variant == 0"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "skill1": {
          "animations": ["ink_clouds"],
          "transitions": [
            {"death": "query.is_sheared"},
            {"idle": "query.variant == 0"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "skill2": {
          "animations": ["ink_beams"],
          "transitions": [
            {"death": "query.is_sheared"},
            {"idle": "query.variant == 0"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "skill3": {
          "animations": ["siphon"],
          "transitions": [
            {"death": "query.is_sheared"},
            {"idle": "query.variant == 0"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "skill4": {
          "animations": ["catch"],
          "transitions": [
            {"death": "query.is_sheared"},
            {"idle": "query.variant == 0"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "skill5": {
          "animations": ["coral_strike"],
          "transitions": [
            {"death": "query.is_sheared"},
            {"idle": "query.variant == 0"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        },
        "skill6": {
          "animations": ["rampage"],
          "transitions": [
            {"death": "query.is_sheared"},
            {"idle": "query.variant == 0"}
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true
        }
      }
    }
  }
}